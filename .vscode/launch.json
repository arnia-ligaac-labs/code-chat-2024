  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API Debug",
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "runtimeArgs": ["--watch", "-r", "ts-node/register"],
      "cwd": "${workspaceFolder}/packages/api",
      "program": "${workspaceFolder}/packages/api/src/server.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
